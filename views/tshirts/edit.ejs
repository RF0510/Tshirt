<body>
    
    <h1>Edit <%= tshirt.name %></h1>

    <form action="/tshirts/<%=tshirt._id%>?_method=PUT" method="POST">
      <label for="name">Name:</label>
      <input type="text" name="name" value="<%= tshirt.name %>" /> 
  
      <label for="color">Color?</label>
      <input type="text" name="color" value="<%= tshirt.color %>" />
    
      <button type="submit">Update T-Shirt</button>
    </form>
    <a href="/tshirts">Back to T-Shirts</a>
  </body>
  